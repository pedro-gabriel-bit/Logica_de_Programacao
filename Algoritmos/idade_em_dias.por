programa
{
	
	funcao inicio()
	{
		inteiro ano, mes, dia, totaldias

		escreva("escreva sua idade em anos: ")
		leia(ano)

		escreva("screva sua idade em meses:  ")
		leia(mes)


		escreva("screva sua idade em dias: ")
		leia(dia)

		totaldias = (ano * 365) + (mes * 30) * dia

		escreva ("sua idade expressa em dias e: ",totaldias, "\n")

		
	}
}
