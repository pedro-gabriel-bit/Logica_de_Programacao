programa
{
	funcao inicio()
	{
		inteiro soma, n
		soma = 0
		n = 2

		faca
		{
			soma = soma + n
			n = n + 2
		}
		enquanto (n <= 500)

		escreva("Somatorio dos pares de 1 a 500: ", soma)
	}
}
